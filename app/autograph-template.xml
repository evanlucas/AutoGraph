<svg xmlns="http://www.w3.org/2000/svg" ng-mouseup="mouseUp($event)" width="{{windowWidth}}" height="{{windowHeight}}">

    <g id="control-layer">
        <rect style="fill: rgba(100, 100, 100, 0.0980392);" width="1856" height="556"></rect>
    </g>

    <g id="wire-layer">
    </g>

    <g id="component-layer">
        <component ng-repeat="(id, component) in placedComponents" ng-controller="BaseComponentController">
            <text class="component-text" dy=".9em">{{component.label}}</text>
        </component>
    </g>

</svg>
